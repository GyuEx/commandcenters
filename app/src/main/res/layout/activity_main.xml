<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="text_color_mainbtn1"
            type="int" />
        <variable
            name="text_color_mainbtn2"
            type="int" />
        <variable
            name="text_color_mainbtn3"
            type="int" />
        <variable
            name="viewModel"
            type="com.beyondinc.commandcenter.viewmodel.MainsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.Mains">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/black"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <Button
                        android:id="@+id/mB01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="15dp"
                        android:background="@drawable/menu_btn">
                    </Button>

                    <Button
                        android:id="@+id/mB02"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:background="@color/black"
                        android:textColor="@drawable/click_text_color"
                        android:text="오더현황 ▼">
                    </Button>

                    <Button
                        android:id="@+id/mB03"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="1dp"
                        android:textStyle="bold"
                        android:background="@drawable/map_btn">
                    </Button>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/mB04"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:onClick="@{v->viewModel.setLayoutBtn1()}"
                        android:text="배정"
                        app:text_color_mainbtn1="@{viewModel.layer}">
                    </TextView>

                    <TextView
                        android:id="@+id/mB05"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:onClick="@{v->viewModel.setLayoutBtn2()}"
                        android:text="가맹점"
                        app:text_color_mainbtn2="@{viewModel.layer}">
                    </TextView>

                    <TextView
                        android:id="@+id/mB06"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:onClick="@{v->viewModel.setLayoutBtn3()}"
                        android:text="라이더"
                        app:text_color_mainbtn3="@{viewModel.layer}">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/mL01"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:background="@color/white"
                    android:orientation="horizontal">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="2">

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/state_btn_1"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="8888"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/state_btn_2"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="8888"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/state_btn_3"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="8888"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/state_btn_4"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="8888"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"/>

                    <CheckBox
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:button="@drawable/state_btn_5"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="@color/white"
                        android:text="8888"
                        android:gravity="center"
                        android:textSize="15dp"
                        android:layout_weight="1"/>

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>