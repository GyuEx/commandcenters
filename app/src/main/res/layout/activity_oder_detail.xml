<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.beyondinc.commandcenter.viewmodel.MainsViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.OderDetail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/black"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="35dp"
                        android:layout_height="30dp"
                        android:background="@drawable/refrash_btn">
                    </Button>
                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:text="오더상세"
                    android:gravity="center"
                    android:textSize="30dp"
                    android:textColor="@color/white"
                    android:textStyle="bold">

                </TextView>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">

                    <Button
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/exit_btn"
                        android:onClick="@{v->viewModel.closeDetail()}">
                    </Button>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:layout_margin="10dp"
                            android:text="배정"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:onClick="@{v->viewModel.showHistory()}"
                            android:textColor="@color/white">

                        </Button>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:layout_margin="10dp"
                            android:text="배정취소"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/white">

                        </Button>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:layout_margin="10dp"
                            android:text="오더완료"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/white">

                        </Button>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/black"
                            android:layout_margin="10dp"
                            android:text="오더취소"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/white">

                        </Button>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11"
                    android:background="@drawable/dialog_background"
                    android:padding="1dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="센터"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.centerName}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="가맹점"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.agencyName}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="가맹점주소"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:textColor="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="@{viewModel.item.agencyAddrData}"
                                android:singleLine="false"
                                android:background="@drawable/detail_data_background">
                            </TextView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/detail_title_background">
                                </Button>

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="가맹점전화"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:textColor="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="@{viewModel.item.agencyPhoneNo}"
                                android:singleLine="true"
                                android:background="@drawable/detail_data_background">
                            </TextView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/detail_title_background">
                                </Button>

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="고객주소"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:textColor="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="@{viewModel.item.customerShortAddr}"
                                android:singleLine="false"
                                android:background="@drawable/detail_data_background">
                            </TextView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/detail_title_background">
                                </Button>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="판매금액"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="@{viewModel.getItemPaymonet()}"
                            android:singleLine="true"
                            android:background="@color/black">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="배달금액"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:text="@{viewModel.getItemRiderPay()}"
                            android:singleLine="true"
                            android:background="@color/black">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="포장"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="커맨드센터"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="고객요청사항"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:ellipsize="marquee"
                            android:focusableInTouchMode="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:focusable="true"
                            android:text="@{viewModel.item.storeMemo}"

                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="배달상태"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.deliveryStateName}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="배달거리"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.deliveryDistance}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="라이더명"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.riderName}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="라이더전화"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="5"
                                android:textColor="@color/black"
                                android:gravity="center_vertical"
                                android:paddingLeft="15dp"
                                android:text="@{viewModel.item.riderPhoneNo}"
                                android:singleLine="true"
                                android:background="@drawable/detail_data_background">
                            </TextView>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <Button
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/detail_title_background">
                                    </Button>
                                </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="접수시간"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.modDT}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="배정시간"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.modDT}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="픽업시간"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.modDT}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="배달시간"
                            android:gravity="center"
                            android:textColor="@color/black"
                            android:background="@drawable/detail_title_background">
                        </TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"
                            android:paddingLeft="15dp"
                            android:text="@{viewModel.item.modDT}"
                            android:singleLine="true"
                            android:background="@drawable/detail_data_background">
                        </TextView>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>