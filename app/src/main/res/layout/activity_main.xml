<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.beyondinc.commandcenter.viewmodel.MainsViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/Mains"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:drawer_open="@{viewModel.drawer}"
            tools:context=".activity.Mains">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/black"
                    android:layout_weight="1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10"
                                android:background="@color/black"
                                android:gravity="center"
                                android:text="오더현황 "
                                android:textColor="@drawable/click_text_color"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                app:Main_title_font2="@{viewModel.layer}">
                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:menu_title_check_btn="@{viewModel.layer}"
                                android:layout_weight="1">
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/mB01"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="15dp"
                                app:menu_title="@{viewModel.layer}"
                                android:onClick="@{v->viewModel.showDrawer()}"
                                android:background="@drawable/menu_btn">
                            </Button>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10">
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="7">
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/black"
                                android:gravity="left|center_vertical"
                                android:text=" ▼"
                                android:textColor="@drawable/click_text_color"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:onClick="@{v->viewModel.click_check()}"
                                app:Main_title_font="@{viewModel.checkview}"
                                app:menu_title_check_btn="@{viewModel.layer}">
                            </TextView>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4">
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="match_parent">
                            </LinearLayout>

                            <TextView
                                android:id="@+id/mB03"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:onClick="@{v->viewModel.click_fragment()}"
                                android:textColor="@drawable/click_text_color_black"
                                android:textSize="18dp"
                                android:layout_margin = "5dp"
                                android:background="@drawable/menu_btn_back"
                                android:text="오더화면"
                                android:textStyle="bold"
                                app:layout_form_btn="@{viewModel.layer}"
                                app:text_color_map="@{viewModel.layer}">
                            </TextView>

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="29">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="2"
                                app:layout_form_header="@{viewModel.layer}"
                                android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="0"
                                        app:layout_form="@{viewModel.layer == viewModel.getSelectOder ? 1 : 0}"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textSize="25dp"
                                            android:textStyle="bold"
                                            android:onClick="@{v->viewModel.click_brife()}"
                                            android:text="배정"
                                            app:text_color_breif="@{viewModel.select}">
                                        </TextView>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textSize="25dp"
                                            android:textStyle="bold"
                                            android:onClick="@{v->viewModel.click_store()}"
                                            android:text="가맹점"
                                            app:text_color_store="@{viewModel.select}">
                                        </TextView>

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="center"
                                            android:textSize="25dp"
                                            android:textStyle="bold"
                                            android:onClick="@{v->viewModel.click_rider()}"
                                            android:text="라이더"
                                            app:text_color_rider="@{viewModel.select}">
                                        </TextView>
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:orientation="vertical"
                                        app:layout_form="@{viewModel.layer == viewModel.getSelectMap ? 1 : 0}"
                                        android:layout_weight="0">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="0dp"
                                            android:orientation="horizontal"
                                            android:padding="5dp"
                                            android:background="@color/white"
                                            android:layout_weight="1">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/map_menu_btn_background"
                                                android:layout_weight="2">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:textColor="@color/white"
                                                    android:text="기사"
                                                    android:gravity="center"
                                                    android:onClick="@{v->viewModel.MapDrOpen()}"
                                                    android:textSize="25dp"
                                                    android:textStyle="bold">
                                                </TextView>

                                            </LinearLayout>
                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical"
                                                android:layout_weight="5">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:textColor="@color/black"
                                                    android:text="@{viewModel.order_count}"
                                                    android:gravity="center"
                                                    android:layout_weight="1">

                                                </TextView>

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="0dp"
                                                    android:textColor="@color/black"
                                                    android:text="@{viewModel.rider_count}"
                                                    android:gravity="center"
                                                    android:layout_weight="1">

                                                </TextView>
                                            </LinearLayout>

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:background="@drawable/map_menu_btn_background"
                                                android:layout_weight="2">

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:textColor="@color/white"
                                                    android:text="선택취소"
                                                    android:onClick="@{v->viewModel.MapOrderOpen()}"
                                                    android:gravity="center"
                                                    android:textSize="20dp"
                                                    android:textStyle="bold">
                                                </TextView>

                                        </LinearLayout>

                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    app:layout_form="@{viewModel.layer == viewModel.getSelectAgency? 1:0}"
                                    android:orientation="horizontal">

                                    <Spinner
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:entries="@{viewModel.spAgencyList}"
                                        android:onItemSelected='@{viewModel::onItemSelectedAgency}'
                                        android:layout_weight="3">
                                    </Spinner>

                                    <EditText
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="2">
                                    </EditText>

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:text="검색"
                                        android:textSize="18dp"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:textColor="@drawable/click_text_color_black"
                                        android:background="@drawable/menu_btn_back"
                                        android:layout_margin="5dp"
                                        android:layout_weight="1">
                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/mL01"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="25"
                                android:background="@color/white"
                                android:orientation="horizontal">
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/mL02"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            app:layout_check="@{viewModel.checkview}"
                            android:orientation="vertical"
                            tools:ignore="MissingConstraints">
                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mdL01"
                android:orientation="vertical"
                android:layout_width="270dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_gravity="start"
                android:clickable="true"
                android:focusable="true"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="left">

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:onClick="@{v->viewModel.showDrawer()}"
                        android:background="@drawable/exit_w_btn">
                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/s_logo">
                    </TextView>

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="15">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:gravity="left|center"
                                android:background="@drawable/notice">

                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:textSize="20dp"
                                android:text="공지사항"
                                android:onClick="@{v->viewModel.click_notice()}"
                                android:textColor="@drawable/click_text_color_black"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center_vertical">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:gravity="left|center"
                                android:background="@drawable/home">

                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:textSize="20dp"
                                android:text="가맹점"
                                android:onClick="@{v->viewModel.click_notice()}"
                                android:textColor="@drawable/click_text_color_black"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center_vertical">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:gravity="left|center"
                                android:background="@drawable/home2">

                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:textSize="20dp"
                                android:text="센터"
                                android:onClick="@{v->viewModel.click_notice()}"
                                android:textColor="@drawable/click_text_color_black"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center_vertical">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:gravity="left|center"
                                android:background="@drawable/parson">

                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:textSize="20dp"
                                android:text="라이더"
                                android:onClick="@{v->viewModel.click_notice()}"
                                android:textColor="@drawable/click_text_color_black"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center_vertical">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="50dp">

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:gravity="left|center"
                                android:background="@drawable/setting">

                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:textSize="20dp"
                                android:text="환경설정"
                                android:onClick="@{v->viewModel.click_setting()}"
                                android:textColor="@drawable/click_text_color_black"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center_vertical">

                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:gravity="left|center"
                                android:background="@drawable/logout">

                            </TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:textSize="20dp"
                                android:text="종료"
                                android:textAlignment="gravity"
                                android:textColor="@drawable/click_text_color_black"
                                android:onClick="@{v->viewModel.click_exit()}"
                                android:textStyle="bold"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center_vertical">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/call"
                        android:gravity="left">

                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:textSize="20dp"
                        android:text="1899-4231"
                        android:textColor="@drawable/click_text_color_black"
                        android:textStyle="bold"
                        android:onClick="@{v->viewModel.click_center_call()}"
                        android:layout_marginLeft="20dp"
                        android:gravity="left|center_vertical">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/kakao"
                        android:gravity="left">

                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="8"
                        android:text="비욘드딜리버리 헬프데스크"
                        android:textColor="@drawable/click_text_color_black"
                        android:onClick="@{v->viewModel.click_kakao_call()}"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"
                        android:gravity="left|center_vertical">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1">
                </LinearLayout>

            </LinearLayout>
        </androidx.drawerlayout.widget.DrawerLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:Main_Bright="@{viewModel.briteLayer}">
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>