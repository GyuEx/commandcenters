<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.beyondinc.commandcenter.viewmodel.AddressViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

            </LinearLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:text="@{viewModel.titletext}"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold">

            </TextView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <Button
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/exit_btn"
                    android:onClick="@{v->viewModel.click_cancel()}"></Button>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="0"
            android:orientation="vertical"
            app:Address_agency_addr="@{viewModel.from}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:Address_main_layer="@{viewModel.from}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center"
                            android:onClick="@{v->viewModel.closeKeyboard()}"
                            android:text='@{viewModel.title}'
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/line_background"
                            android:gravity="center"
                            android:onClick="@{view-> viewModel.setMode()}"
                            android:text="주소검색"
                            android:textColor="@drawable/click_text_color_black"
                            android:textSize="13dp"
                            android:textStyle="bold"></Button>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v->viewModel.closeKeyboard()}"
                    android:orientation="vertical"
                    app:Address_sel_layer="@{viewModel.from}">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/whitegray"
                        android:onClick="@{v->viewModel.closeKeyboard()}"></TextView>


                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/detail_data_background"
                        android:gravity="center_vertical"
                        android:hint="상세주소 입력은 여기를 터치해주세요"
                        android:imeOptions="actionDone"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="@={viewModel.detailtxt}"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:focusEditText="@{viewModel.editfocus}"
                        app:focus="@{viewModel.foc}"></EditText>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="@{v->viewModel.closeKeyboard()}"
                android:orientation="vertical"
                app:Address_sel2_layer="@{viewModel.from}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:gravity="left|center"
                    android:onClick="@{v->viewModel.closeKeyboard()}"
                    android:text='* 행정동 선택'
                    android:textColor="@color/black"
                    android:textSize="13dp"
                    android:textStyle="bold"></TextView>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/spinner_bg"
                    android:entries="@{viewModel.itemsdong}"
                    android:gravity="center"
                    android:onItemSelected='@{viewModel::onItemSelected}'
                    app:spin_bun="@{viewModel.spindefult}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/whitegray"
                    android:onClick="@{v->viewModel.closeKeyboard()}"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{v->viewModel.closeKeyboard()}"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:gravity="left|center"
                        android:onClick="@{v->viewModel.closeKeyboard()}"
                        android:text='* 검색항목을 선택해주세요.'
                        android:textColor="@color/black"
                        android:textSize="13dp"
                        android:textStyle="bold"></TextView>

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onCheckedChanged="@{viewModel::onCheckedChanged}"
                        android:onClick="@{v->viewModel.closeKeyboard()}"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/jibun"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:checked="true"
                            android:onClick="@{v->viewModel.closeKeyboard()}"
                            android:text="지번"
                            android:textColor="@color/black"></RadioButton>

                        <RadioButton
                            android:id="@+id/Road"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="@{v->viewModel.closeKeyboard()}"
                            android:text="도로명"
                            android:textColor="@color/black"></RadioButton>

                        <RadioButton
                            android:id="@+id/Build"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:onClick="@{v->viewModel.closeKeyboard()}"
                            android:text="건물명"
                            android:textColor="@color/black"></RadioButton>
                    </RadioGroup>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/editBox01"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="5"
                            android:background="@drawable/detail_data_background"
                            android:hint='@{viewModel.hinttxt}'
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:onEditorAction="@{viewModel::onEditorAction}"
                            android:text="@={viewModel.searchTxt}"
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/whitegray"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:Address_clear_layer="@{viewModel.from}"
                            app:focus="@{viewModel.foc}"></EditText>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/line_background"
                            android:gravity="center"
                            android:onClick="@{v->viewModel.searchAddr()}"
                            android:text="검색"
                            android:textColor="@drawable/click_text_color_black"
                            android:textSize="20dp">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:orientation="vertical"
                app:Address_top_layer="@{viewModel.from}">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/whitegray"
                    android:onClick="@{v->viewModel.closeKeyboard()}"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:onClick="@{v->viewModel.rechoice()}"
                    android:text="@{viewModel.fromtext}"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/drv02"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0"
                    app:Address_rec_layer="@{viewModel.from}"
                    bind:verAdapter="@{viewModel.getAdapterAddr()}">

                </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0"
                android:onClick="@{v->viewModel.closeKeyboard()}"
                android:orientation="vertical"
                app:Address_number_layer="@{viewModel.from}">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/whitegray"
                    android:onClick="@{v->viewModel.closeKeyboard()}"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Spinner
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:background="@drawable/spinner_bg"
                            android:entries="@array/BuildingNameList"
                            android:onItemSelected="@{viewModel::onItemSelectedBuildName}"
                            android:padding="5dp"></Spinner>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/line_background"
                            android:gravity="center"
                            android:onClick="@{v->viewModel.click_dong()}"
                            android:text="동"
                            android:textColor="@drawable/click_text_color_black"
                            android:textSize="20dp"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/line_background"
                            android:gravity="center"
                            android:onClick="@{v->viewModel.click_ho()}"
                            android:text="호"
                            android:textColor="@drawable/click_text_color_black"
                            android:textSize="20dp"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/line_background"
                            android:gravity="center"
                            android:onClick="@{v->viewModel.click_cheung()}"
                            android:text="층"
                            android:textColor="@drawable/click_text_color_black"
                            android:textSize="20dp"></TextView>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/line_background"
                            android:gravity="center"
                            android:onClick="@{v->viewModel.click_delete()}"
                            android:text="삭제"
                            android:textColor="@drawable/click_text_color_black"
                            android:textSize="20dp"></TextView>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/whitegray"
                    android:onClick="@{v->viewModel.closeKeyboard()}"></TextView>

                <LinearLayout
                    android:id="@+id/adML01"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:onClick="@{v->viewModel.closeKeyboard()}"
                    android:orientation="horizontal"
                    app:Address_map_layer="@{viewModel.from}"></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:onClick="@{v->viewModel.closeKeyboard()}"
                    android:orientation="horizontal"
                    app:Address_map_layer_bottom="@{viewModel.from}"></LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:layout_weight="10"
            android:orientation="vertical"
            app:Address_agency_assign="@{viewModel.from}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:onClick="@{v->viewModel.closeKeyboard()}"
                        android:text='@{viewModel.title + viewModel.detailtxt}'
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/line_background"
                        android:gravity="center"
                        android:onClick="@{view-> viewModel.setMode()}"
                        android:text="주소검색"
                        android:textColor="@drawable/click_text_color_black"
                        android:textSize="13dp"
                        android:textStyle="bold"></Button>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{v->viewModel.closeKeyboard()}"
                    android:text='@{viewModel.deliveryFee}'
                    android:textColor="@color/complite"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="@{v->viewModel.closeKeyboard()}"
                    android:text='@{viewModel.deliveryDistance}'
                    android:textColor="@color/complite"
                    android:textSize="15dp"
                    android:textStyle="bold"></TextView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/whitegray"
                android:onClick="@{v->viewModel.closeKeyboard()}"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_data_background"
                android:orientation="vertical"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/detail_title_background"
                        android:gravity="center"
                        android:onClick="@{v->viewModel.closeKeyboard()}"
                        android:text="주문내역"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/detail_data_background"
                        android:padding="5dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/detail_inner_background"
                            android:hint="주문내역을 입력해주세요."
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:text="@={viewModel.orderHistory}"
                            android:textColorHint="@color/whitegray"></EditText>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/detail_title_background"
                            android:gravity="center"
                            android:onClick="@{v->viewModel.closeKeyboard()}"
                            android:text="판매금액"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/detail_data_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:padding="5dp">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/detail_inner_background"
                                android:hint="판매금액을 입력해주세요."
                                android:inputType="number"
                                android:paddingLeft="10dp"
                                android:singleLine="true"
                                android:text="@={viewModel.orderSailMoney}"
                                android:textColorHint="@color/whitegray"></EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/line_background"
                                android:gravity="center"
                                android:onClick="@{v->viewModel.click_100()}"
                                android:text="1백원"
                                android:textColor="@drawable/click_text_color_black"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/line_background"
                                android:gravity="center"
                                android:onClick="@{v->viewModel.click_500()}"
                                android:text="5백원"
                                android:textColor="@drawable/click_text_color_black"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/line_background"
                                android:gravity="center"
                                android:onClick="@{v->viewModel.click_1000()}"
                                android:text="1천원"
                                android:textColor="@drawable/click_text_color_black"
                                android:textSize="20dp"></TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/line_background"
                                android:gravity="center"
                                android:onClick="@{v->viewModel.click_5000()}"
                                android:text="5천원"
                                android:textColor="@drawable/click_text_color_black"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/line_background"
                                android:gravity="center"
                                android:onClick="@{v->viewModel.click_10000()}"
                                android:text="1만원"
                                android:textColor="@drawable/click_text_color_black"
                                android:textSize="20dp"></TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/line_background"
                                android:gravity="center"
                                android:onClick="@{v->viewModel.click_money_delete()}"
                                android:text="삭제"
                                android:textColor="@drawable/click_text_color_black"
                                android:textSize="20dp"></TextView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:background="@drawable/detail_title_background"
                        android:gravity="center"
                        android:onClick="@{v->viewModel.closeKeyboard()}"
                        android:text="도착시간"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/spinner_bg_inner"
                        android:entries="@array/readyTimeList"
                        android:onItemSelected="@{viewModel::onItemSelectedArriveTime}"
                        android:paddingLeft="10dp"></Spinner>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/detail_data_background"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        app:arrive_time_color="@{viewModel.orderarriveTime}"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/detail_title_background"
                        android:gravity="center"
                        android:onClick="@{v->viewModel.closeKeyboard()}"
                        android:text="전화번호"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/detail_data_background"
                        android:padding="5dp">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/detail_inner_background"
                            android:hint="전화번호를 입력해주세요."
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:text="@={viewModel.orderTelnumber}"
                            android:textColorHint="@color/whitegray"></EditText>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/detail_title_background"
                        android:gravity="center"
                        android:onClick="@{v->viewModel.closeKeyboard()}"
                        android:text="전달사항"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/detail_data_background"
                        android:padding="5dp">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:background="@drawable/detail_inner_background"
                            android:hint="전달사항을 입력해주세요."
                            android:paddingLeft="10dp"
                            android:singleLine="true"
                            android:text="@={viewModel.orderNotice}"
                            android:textColorHint="@color/whitegray"></EditText>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/detail_title_background"
                        android:gravity="center"
                        android:onClick="@{v->viewModel.closeKeyboard()}"
                        android:text="결제유형"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold"></TextView>

                    <Spinner
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:background="@drawable/spinner_bg_inner"
                        android:entries="@array/pay_spinner"
                        android:onItemSelected="@{viewModel::onItemSelectedPayment}"
                        android:paddingLeft="10dp"></Spinner>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            app:Address_finish_layer="@{viewModel.from}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/whitegray"
                android:gravity="center"
                android:onClick="@{v->viewModel.click_finish()}"
                android:text="@{viewModel.btntext}"
                android:textColor="@drawable/click_text_color_black"
                android:textSize="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</layout>